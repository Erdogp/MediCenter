<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
	<persistence-unit name="medicenter" transaction-type="JTA">
		<jta-data-source>java:/MediCenterDS</jta-data-source>
		<class>pe.edu.upc.medicenter.models.entities.Clinica</class>
		<class>pe.edu.upc.medicenter.models.entities.Distrito</class>
		<class>pe.edu.upc.medicenter.models.entities.Usuario</class>
		
	<exclude-unlisted-classes>false</exclude-unlisted-classes>
		<properties>
			<property
				name="javax.persistence.schema-generation.database.action"
				value="drop and create" />
		</properties>
	</persistence-unit>
</persistence>
